<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="200dp"
    android:layout_height="250dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_bitmap"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/showchau"
            />
        <TextView
            android:id="@+id/tv_name_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chậu rửa mặt lavabo TOTO LT5715"
            android:textSize="17sp"
            android:padding="10dp"
            android:maxLines="2"
            />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3,285,000 đ"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:textColor="#FF0A0A"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>